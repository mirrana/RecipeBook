<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.51" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.abopu.recipebook.desktop.manager.presenter.ManagerRootPresenter">
  <center>
    <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER" fx:id="tabPane">
      <Tab closable="false" text="Food Items" fx:id="foodItemsTab"/>
      <Tab closable="false" text="Brands" fx:id="brandsTab"/>
      <Tab closable="false" text="Nutrients" fx:id="nutrientsTab"/>
      <Tab closable="false" text="Unit Types" fx:id="unitTypesTab"/>
      <Tab closable="false" text="Units" fx:id="unitsTab"/>
    </TabPane>
  </center>
  <bottom>
    <HBox alignment="CENTER_LEFT" spacing="3.0">
      <BorderPane.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
      </BorderPane.margin>
      <Button mnemonicParsing="false" text="&lt;-"/>
      <Button mnemonicParsing="false" text="-&gt;"/>
      <HBox alignment="CENTER_LEFT" spacing="3.0">
        <padding>
          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
        <Label text="Record"/>
        <Label text="0"/>
        <Label text="of"/>
        <Label text="0"/>
      </HBox>
      <Region HBox.hgrow="ALWAYS"/>
      <Button mnemonicParsing="false" text="New"/>
      <Button mnemonicParsing="false" text="Delete"/>
      <Button mnemonicParsing="false" text="Save"/>
    </HBox>
  </bottom>
</BorderPane>
